<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mobileappdevelop.simpledoctor.MainActivity"
    android:background="#c8eefc">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Medical History"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_marginTop="50dp"/>

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="270dp"
       android:src="@drawable/home_logo"
       android:scaleType="fitCenter"
       android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/isMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you Already A Member"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:onClick="ismemberFunc"
        />

    <TextView
        android:id="@+id/newMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Member"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:onClick="newMemberFunc"
        />
</LinearLayout>
